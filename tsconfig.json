{
  "compilerOptions": {
    "target": "ES2020",
    "outDir": "dist",
    "rootDir": "src",
    "module": "CommonJS",
    "strict": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "allowJs": true,
    "paths": {
      "#entities/*": [
        "./src/entities/*"
      ],
      "#structure": [
        "./src/structure/index"
      ]
    }
  }
}
